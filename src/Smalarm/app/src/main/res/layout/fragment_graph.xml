<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_grid"
    tools:context=".ui.graph.GraphFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/todayStat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/font"
            android:background="@drawable/sleepbutton"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:id="@+id/graph">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/font"

            />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:background="@drawable/border"
                    android:text="시작"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:background="@drawable/border"
                    android:text="수면시간"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:background="@drawable/border"
                    android:text="종료"
                    />

            </LinearLayout>


















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/starttime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    />
                <TextView
                    android:id="@+id/sleeptime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    />
                <TextView
                    android:id="@+id/endtime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    />


            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="#190707" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/miniinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="@drawable/border"
                android:fontFamily="@font/font"
                android:text="평균수면시간"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:fontFamily="@font/font"
                android:text="전체"
                />


            <TextView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:fontFamily="@font/font"
                android:text="월"/>

            <TextView
                android:id="@+id/week"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textSize="13dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:fontFamily="@font/font"
                android:text="주"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/totalAVG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                />


            <TextView
                android:id="@+id/monthAVG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                />

            <TextView
                android:id="@+id/weekAVG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/barChartDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="@font/font"

                />

        </LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/barChart"
            android:layout_weight="4"
            android:fontFamily="@font/font"
            />


    </LinearLayout>
</LinearLayout>
